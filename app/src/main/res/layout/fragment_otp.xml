<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:layout_gravity="center_vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lineer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textColor="@color/Main_color"
            android:fontFamily="sans-serif"
            android:text="@string/An_OTP_has_been"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mobileno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="@string/sent_to_static"
            android:textColor="@color/Main_color"
            android:fontFamily="sans-serif"
            android:textSize="18sp" />

        <com.trusource.custom.PinEntryView
            android:id="@+id/edittext_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:accentRequiresFocus="true"
            app:accentType="character"
            app:accentWidth="@dimen/spacing_xsmall"
            app:backgroundTint="@color/colorPrimaryDark"
            app:digitBackground="@drawable/otp_background"
            app:digitSpacing="@dimen/spacing_small"
            app:digitTextColor="@color/Main_text_color"
            app:digitTextSize="@dimen/text_large"
            app:digitWidth="@dimen/layout_xlarge"
            app:mask=" "
            app:numDigits="4"
            app:pinAccentColor="@color/colorPrimary"
            app:pinInputType="number" />


        <Button
            android:id="@+id/otp_confirm"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif"
            android:background="@color/colorPrimary"
            android:textAllCaps="true"
            android:text="Confirm" />

    </LinearLayout>
</ScrollView>