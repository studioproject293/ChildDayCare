<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="GenericEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:inputType">textCapSentences</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/open_sans</item>
    </style>
    <style name="BottomButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:background">@color/primary_button</item>
    </style>
    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/primary_button</item>
        <item name="colorPrimaryDark">@color/primary_button</item>
        <item name="colorAccent">@color/primary_button</item>
    </style>
</resources>

